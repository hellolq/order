/* pages/detail/detail.wxss */
.mianbox {
  background-color: #F2F3F7;
  position: relative;
}

.swiper_container {
  width: 100%;
  height: 720rpx;
  background-color: white;
}
.swiperImg {
  width: 100%;
  height: 100%;
}

.goods_message {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: white;
}

.goods_price {
  font-size: 32rpx;
  color: #F08485;
}

.goods_tittle {
  font-size:32rpx;
  margin-top: 20rpx;
}

.goods_note {
  height: 78rpx;
  width: 100%;
  font-size: 28rpx;
  background-color: #FEF8F8;
  padding-left: 20rpx;
  line-height: 78rpx;
}

.goods_note_text {
  color: #C1C1C1;
}

.goods_num{
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  padding: 20rpx;
  margin-bottom: 500rpx;
}

.goods_num_tittle {
   color: #787878;
}

.goods_num_cal {
  display: flex;
  margin-top: 20rpx;
}
.goods_num_cal_item{
  z-index: 1;
  height: 70rpx;
  width: 80rpx;
  background-color: #FAFAFA;
  margin-right: 4rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 40rpx;
  color: #C1C1C1;
}

.goods_num_cal_item:nth-child(2) {
  width: 120rpx;
}

.goods_tools{
  background-color: white;
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  border-top: 1px solid #f1f1f1;
  display: flex;
  z-index: 10;
  }

.goods_tools_item {
  display: flex;
  flex-direction: column;
  width: 100rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 30rpx;
  align-items:center;
  padding: 20rpx;
}

.add_car {
  height: 80rpx;
  top:50%;
  margin-top:-40rpx;
  margin-right: 10rpx;
  width: 300rpx;
  border-radius: 10rpx;
  background-color: #F85D5B;
  color: white;
  font-size: 32rpx;
}

.goods_tools_item_img {
  width: 50rpx;
  height: 50rpx;
  flex: 3;
}

.goods_tools_item_text {
  font-size: 28rpx;
  text-align: center;
  flex: 1;
  color:#c1c1c1;
}